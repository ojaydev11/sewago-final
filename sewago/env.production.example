# ========================================
# SewaGo - Production Environment Variables
# ========================================

# CRITICAL: Change all default values before deploying to production!
# Generate secure secrets using: openssl rand -hex 32

# ========================================
# Core Application Settings
# ========================================
NODE_ENV=production

# Backend Configuration
PORT=4000
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/sewago?retryWrites=true&w=majority
CLIENT_ORIGIN=https://your-frontend-domain.vercel.app

# Frontend Configuration (Next.js)
NEXT_PUBLIC_BASE_URL=https://your-frontend-domain.vercel.app
NEXT_PUBLIC_API_URL=https://your-backend-domain.railway.app
DATABASE_URL=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/sewago?retryWrites=true&w=majority

# ========================================
# Authentication & Security
# ========================================
# JWT Secrets (MUST BE 64+ CHARACTERS - Generate with: openssl rand -hex 32)
JWT_ACCESS_SECRET=your-64-character-access-secret-key-here-change-this-in-production
JWT_REFRESH_SECRET=your-64-character-refresh-secret-key-here-change-this-in-production

# Session Configuration
SESSION_SECRET=your-64-character-session-secret-key-here-change-this-in-production

# ========================================
# Payment Gateway Configuration
# ========================================
# eSewa Configuration
ESEWA_MERCHANT_CODE=your-esewa-merchant-code
ESEWA_SUCCESS_URL=https://your-frontend-domain.vercel.app/payment/success
ESEWA_FAILURE_URL=https://your-frontend-domain.vercel.app/payment/failed

# Khalti Configuration  
KHALTI_PUBLIC_KEY=your-khalti-public-key
KHALTI_SECRET_KEY=your-khalti-secret-key

# Payment Webhook Security
PAYMENT_WEBHOOK_SECRET=your-32-character-webhook-secret-here

# ========================================
# File Storage (S3 Compatible)
# ========================================
S3_ENDPOINT=https://your-s3-endpoint.com
S3_ACCESS_KEY_ID=your-s3-access-key-id
S3_SECRET_ACCESS_KEY=your-s3-secret-access-key
S3_BUCKET_REVIEWS=sewago-reviews-prod
S3_REGION=us-east-1

# ========================================
# Security & Data Protection
# ========================================
ALLOW_SEEDING=false
SEED_KEY=your-32-character-seed-key-here

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://your-admin-domain.com

# ========================================
# Rate Limiting & Performance
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200
LOGIN_RATE_LIMIT_MAX=5
BOOKING_RATE_LIMIT_MAX=30
PAYMENT_RATE_LIMIT_MAX=10

# Redis Configuration (for rate limiting & caching)
REDIS_URL=redis://your-redis-instance:6379
REDIS_PASSWORD=your-redis-password

# ========================================
# Monitoring & Observability
# ========================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Error Tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# ========================================
# Email & Notifications
# ========================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@sewago.app

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# ========================================
# Third-party Integrations
# ========================================
# Maps & Location Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# SMS Service (for OTP)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=SEWAGO

# ========================================
# Development & Testing
# ========================================
# Only enable in non-production environments
# SKIP_DB=false
# DEBUG_LEVEL=info
# TEST_PAYMENT_MODE=false

# ========================================
# Deployment Configuration
# ========================================
# Railway Backend
RAILWAY_STATIC_URL=https://your-backend-domain.railway.app

# Vercel Frontend  
VERCEL_URL=your-frontend-domain.vercel.app

# Build Configuration
SKIP_BUILD_STATIC_GENERATION=false
NEXT_TELEMETRY_DISABLED=1
