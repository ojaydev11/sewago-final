# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sewago

# Authentication
AUTH_SECRET=your_auth_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# AI Provider Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here

# Rate Limiting Configuration (Optional for development)
UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here
RATE_LIMIT_SALT=your_random_salt_string_here

# Optional: Override default rate limit policies
# RATE_LIMIT_AUTH_LIMIT=5
# RATE_LIMIT_AUTH_WINDOW=60
# RATE_LIMIT_CHAT_LIMIT=30
# RATE_LIMIT_CHAT_WINDOW=60
# RATE_LIMIT_AI_LIMIT=20
# RATE_LIMIT_AI_WINDOW=60

# Development: Leave Redis unset to use in-memory rate limiting
# Production: Set Redis values to enable Redis-based rate limiting
