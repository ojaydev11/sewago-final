# SewaGo Frontend Production Environment Variables

# Core Configuration
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://sewago-final.vercel.app
NEXT_PUBLIC_SITE_URL=https://sewago-final.vercel.app
NEXT_PUBLIC_API_URL=https://sewago-backend.railway.app

# Database (for build-time operations only - use in backend)
DATABASE_URL=mongodb+srv://sewago-user:secure-password@cluster.mongodb.net/sewago?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://sewago-user:secure-password@cluster.mongodb.net/sewago?retryWrites=true&w=majority

# Build Configuration
SKIP_DB=true
NEXT_TELEMETRY_DISABLED=1
SKIP_TYPE_CHECK=true

# Auth Secrets (Production keys)
AUTH_SECRET=production-auth-secret-key-change-this-in-production
NEXTAUTH_SECRET=nextauth-secret-key-for-production-deployment
NEXTAUTH_URL=https://sewago-final.vercel.app
JWT_ACCESS_SECRET=production-access-secret-key-64-chars-minimum-12345678901234567890123456789012
JWT_REFRESH_SECRET=production-refresh-secret-key-64-chars-minimum-12345678901234567890123456789012

# Feature Flags (Production settings)
NEXT_PUBLIC_BOOKING_ENABLED=true
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_I18N_ENABLED=false
NEXT_PUBLIC_SEWAAI_ENABLED=false
NEXT_PUBLIC_QUOTE_ESTIMATOR_ENABLED=true
NEXT_PUBLIC_PAYMENTS_ESEWA_ENABLED=false
NEXT_PUBLIC_REVIEWS_ENABLED=true
NEXT_PUBLIC_WARRANTY_BADGE_ENABLED=true
NEXT_PUBLIC_SEARCH_ENABLED=true

# Batch 8 Feature Flags (disabled for stability)
NEXT_PUBLIC_SURGE_ENABLED=false
NEXT_PUBLIC_PROMOS_ENABLED=false
NEXT_PUBLIC_WALLET_ENABLED=false
NEXT_PUBLIC_PARTNER_API_ENABLED=false
NEXT_PUBLIC_WEBHOOKS_ENABLED=false

# Payment Gateway (Production keys)
NEXT_PUBLIC_ESEWA_MERCHANT_CODE=EPAYTEST
NEXT_PUBLIC_KHALTI_PUBLIC_KEY=test_public_key
KHALTI_SECRET_KEY=test_secret_key

# S3/AWS Configuration
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=sewago-uploads-prod
AWS_ACCESS_KEY_ID=REPLACE_WITH_PRODUCTION_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_PRODUCTION_AWS_SECRET_KEY

# Analytics and Monitoring
VERCEL_ANALYTICS_ID=REPLACE_WITH_VERCEL_ANALYTICS_ID
GOOGLE_ANALYTICS_ID=REPLACE_WITH_GOOGLE_ANALYTICS_ID

# Rate Limiting
RATE_LIMIT_SALT=sewago-rate-limit-salt-production

# Redis (if using)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=REPLACE_WITH_GOOGLE_MYS_API_KEY

# AI Provider
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Partner API
PARTNER_API_TOKEN_1=
PARTNER_API_TOKEN_2=
